{
  "name": "webspecs",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "description": "Developer toolkit for understanding how websites are interpreted by search engines, AI crawlers, screen readers, and content extractors",
  "author": "James Greenaway",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jvgomg/semantic-kit.git"
  },
  "bugs": {
    "url": "https://github.com/jvgomg/semantic-kit/issues"
  },
  "homepage": "https://github.com/jvgomg/semantic-kit#readme",
  "type": "module",
  "packageManager": "bun@1.3.9",
  "scripts": {
    "build": "turbo run build --filter='@webspecs/core' --filter='@webspecs/cli' --filter='@webspecs/tui' --filter='@webspecs/test-server-nextjs'",
    "dev": "turbo run dev --filter=@webspecs/cli",
    "dev:tui": "turbo run dev --filter=@webspecs/tui",
    "dev:watch": "turbo watch dev:watch --filter=@webspecs/cli",
    "dev:watch:tui": "turbo watch dev:watch --filter=@webspecs/tui",
    "clean": "turbo run clean && rm -rf node_modules/.cache/turbo",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "manypkg:check": "manypkg check",
    "manypkg:fix": "manypkg fix",
    "pretty": "turbo run pretty",
    "pretty:check": "turbo run pretty:check",
    "test": "turbo run test",
    "test:unit": "turbo run test --filter='@webspecs/*' --filter='!@webspecs/integration-tests'",
    "test:integration": "turbo run test --filter=@webspecs/integration-tests",
    "test:integration:watch": "turbo watch test --filter=@webspecs/integration-tests",
    "test-server": "turbo run start --filter=@webspecs/test-server",
    "test-server:verbose": "turbo run start:verbose --filter=@webspecs/test-server"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@manypkg/cli": "^0.25.1",
    "@types/bun": "1.3.9",
    "eslint": "^9.28.0",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import-x": "^4.15.0",
    "playwright": "^1.58.2",
    "prettier": "^3.8.1",
    "turbo": "^2.8.9",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  }
}
