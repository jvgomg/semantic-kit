{
  "name": "webspecs",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "description": "Developer toolkit for understanding how websites are interpreted by search engines, AI crawlers, screen readers, and content extractors",
  "author": "James Greenaway",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jvgomg/semantic-kit.git"
  },
  "bugs": {
    "url": "https://github.com/jvgomg/semantic-kit/issues"
  },
  "homepage": "https://github.com/jvgomg/semantic-kit#readme",
  "type": "module",
  "scripts": {
    "build": "bun run --filter '@webspecs/*' build",
    "dev": "bun packages/cli/src/cli.ts",
    "dev:watch": "bun --watch packages/cli/src/cli.ts",
    "clean": "rm -rf packages/*/dist tsconfig.tsbuildinfo",
    "typecheck": "bun run --filter '@webspecs/*' typecheck",
    "lint": "eslint .",
    "manypkg:check": "manypkg check",
    "manypkg:fix": "manypkg fix",
    "test": "bun run test:unit && bun run test:integration",
    "test:unit": "bun run --filter '@webspecs/*' test",
    "test:integration": "bun run --filter @webspecs/integration-tests test",
    "test:integration:watch": "bun run --filter @webspecs/integration-tests test:watch",
    "test-server": "bun run --filter @webspecs/test-server start",
    "test-server:verbose": "bun run --filter @webspecs/test-server start:verbose"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@manypkg/cli": "^0.25.1",
    "@types/bun": "1.3.9",
    "eslint": "^9.28.0",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import-x": "^4.15.0",
    "playwright": "^1.58.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  }
}
