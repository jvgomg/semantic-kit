{
  "name": "@webspecs/tui",
  "version": "0.0.17",
  "license": "MIT",
  "description": "Terminal UI for webspecs - interactive analysis of web pages (requires Bun runtime)",
  "author": "James Greenaway",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jvgomg/semantic-kit.git",
    "directory": "packages/tui"
  },
  "type": "module",
  "engines": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "seo",
    "accessibility",
    "a11y",
    "schema",
    "structured-data",
    "json-ld",
    "open-graph",
    "readability",
    "screen-reader",
    "wcag",
    "html-validation",
    "tui",
    "terminal",
    "interactive",
    "bun"
  ],
  "sideEffects": false,
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "README.md"
  ],
  "bin": {
    "webspecs-tui": "./dist/index.js"
  },
  "scripts": {
    "build": "bun run build.ts",
    "build:binaries": "bun run build-binaries.ts",
    "build:binaries:local": "bun run build:binaries",
    "typecheck": "tsc --noEmit",
    "test": "bun test src/",
    "lint": "eslint .",
    "pretty": "prettier --write .",
    "pretty:check": "prettier --check .",
    "dev": "bun src/index.tsx",
    "dev:watch": "bun --watch src/index.tsx",
    "clean": "rm -rf dist tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@opentui/core": "^0.1.79",
    "@opentui/react": "^0.1.79",
    "@webspecs/core": "workspace:*",
    "diff": "^8.0.3",
    "jotai": "^2.16.2",
    "jotai-effect": "^2.2.3",
    "jotai-family": "^1.0.1",
    "jotai-optics": "^0.4.0",
    "marked": "^15.0.12",
    "marked-terminal": "^7.3.0",
    "optics-ts": "^2.4.1",
    "react": "^19.2.4",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/diff": "^8.0.0",
    "@types/marked-terminal": "^6.1.1",
    "@types/react": "^19.2.14",
    "@webspecs/binary-build": "workspace:*"
  }
}
