  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "noEmit": false,
    "checkJs": false,
    "paths": {
      "@webspecs/core": ["../core/dist/index.d.ts"],
      "@webspecs/cli/*": ["../cli/dist/*"]
