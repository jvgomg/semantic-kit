{
  "name": "@webspecs/cli",
  "version": "0.0.17",
  "license": "MIT",
  "description": "CLI for webspecs - analyze how websites are interpreted by search engines, AI crawlers, and screen readers",
  "author": "James Greenaway",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jvgomg/semantic-kit.git",
    "directory": "packages/cli"
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "seo",
    "accessibility",
    "a11y",
    "schema",
    "structured-data",
    "json-ld",
    "open-graph",
    "readability",
    "screen-reader",
    "wcag",
    "html-validation",
    "cli",
    "command-line"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/cli.d.ts",
      "default": "./dist/cli.js"
    },
    "./commands/*": {
      "types": "./dist/commands/*",
      "default": "./dist/commands/*"
    },
    "./lib/*": {
      "types": "./dist/lib/*",
      "default": "./dist/lib/*"
    }
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "README.md"
  ],
  "bin": {
    "webspecs": "./dist/cli.js"
  },
  "scripts": {
    "build": "bun run build.ts",
    "build:binaries": "bun run build-binaries.ts",
    "build:binaries:local": "mkdir -p ./binaries && bun build --compile --minify ./src/cli.ts --outfile ./binaries/webspecs-local --external playwright --external playwright-core --external @axe-core/playwright",
    "typecheck": "tsc --noEmit",
    "test": "bun test src/",
    "lint": "eslint .",
    "pretty": "prettier --write .",
    "pretty:check": "prettier --check .",
    "dev": "bun src/cli.ts",
    "dev:watch": "bun --watch src/cli.ts",
    "clean": "rm -rf dist tsconfig.tsbuildinfo"
  },
  "dependencies": {
    "@webspecs/core": "workspace:*",
    "commander": "^14.0.2",
    "diff": "^8.0.3",
    "marked": "^15.0.12",
    "marked-terminal": "^7.3.0",
    "prettier": "^3.8.1"
  },
  "devDependencies": {
    "@types/diff": "^8.0.0",
    "@types/marked-terminal": "^6.1.1",
    "@webspecs/binary-build": "workspace:*"
  }
}
